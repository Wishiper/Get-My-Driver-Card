<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/test_backgroundtwo"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="58dp">

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="5dp"
            android:layout_marginRight="3dp"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/declaration_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="40dp"
            android:text="Hereby I declare that all the provided details are correct and understand that it is a criminal offence if  I make a false declaration"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
    </LinearLayout>


    <Button
        android:id="@+id/finish_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginStart="270dp"
        android:layout_marginBottom="20dp"
        android:background="@android:color/black"
        android:padding="10dp"
        android:text="Finish"
        android:textColor="@android:color/white"
        android:textSize="16sp" />


    <ImageView
        android:id="@+id/sign_here"
        android:layout_width="316dp"
        android:layout_height="275dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="95dp"
        android:clickable="true"
        app:srcCompat="@drawable/signature_icon" />

    <TextView
        android:id="@+id/header_msg_declaration"
        android:layout_width="364dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:background="@color/Onyx50percent"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="Click below to submite your e-signature"
        android:textAlignment="center"
        android:textSize="19sp"
        android:textStyle="bold" />
</RelativeLayout>